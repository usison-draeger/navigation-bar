{
  "name": "@hugotomazi/capacitor-navigation-bar",
  "version": "3.0.0",
  "description": "Capacitor Plugin for Navigation Bar",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "private": false,
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "HugotomaziCapacitorNavigationBar.podspec"
  ],
  "author": "hugotomazi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hugotomazi/navigation-bar.git"
  },
  "bugs": {
    "url": "https://github.com/hugotomazi/navigation-bar/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "navigation",
    "bar"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- autocorrect --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api NavigationBarPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup rollup.config.js --format cjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^6.1.0",
    "@capacitor/core": "^6.1.0",
    "@capacitor/docgen": "^0.2.2",
    "@capacitor/ios": "^6.1.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "eslint": "^9.5.0",
    "prettier": "~3.3.2",
    "prettier-plugin-java": "~2.6.0",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "swiftlint": "^1.0.1",
    "typescript": "~5.4.5"
  },
  "peerDependencies": {
    "@capacitor/core": "^4.0.1 || ^6.1.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
